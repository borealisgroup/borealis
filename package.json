{
  "private": true,
  "workspaces": [
    "packages/@borealisgroup/components",
    "packages/@borealisgroup/eslint-config",
    "packages/@borealisgroup/eslint-config-ts",
    "packages/@borealisgroup/eslint-config-vue",
    "packages/@borealisgroup/i18n-dev",
    "packages/@borealisgroup/i18n-prod",
    "packages/@borealisgroup/stylelint-config",
    "packages/@borealisgroup/theme"
  ],
  "scripts": {
    "build": "lerna run build --parallel --since",
    "build:storybook": "build-storybook",
    "clean": "rimraf packages/test/* packages/**/temp/*",
    "generate": "plop --plopfile ./scripts/generators/index.js",
    "graduate": "yarn release --conventional-graduate",
    "lint": "yarn lint:js",
    "lint:js": "eslint \"packages/@borealisgroup/**/src/**/*.{js,jsx,ts,tsx}\" --ignore-pattern \"**/cli*\"",
    "pre-release": "yarn release --conventional-prerelease",
    "release": "yarn lint && yarn build && lerna publish --conventional-commits",
    "start:cli": "node ./packages/@borealisgroup/cli/bin/cli.js create pok",
    "storybook": "start-storybook -p 6007"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "invoke",
      "Upgrader"
    ],
    "setupFiles": [
      "<rootDir>/scripts/testSetup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ]
  },
  "devDependencies": {
    "@ant-design/colors": "^4.0.0",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-proposal-optional-chaining": "7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@borealisgroup/eslint-config": "file:packages/@borealisgroup/eslint-config",
    "@borealisgroup/eslint-config-ts": "file:packages/@borealisgroup/eslint-config-ts",
    "@rollup/plugin-typescript": "^4.0.0",
    "@storybook/addon-actions": "^5.3.10",
    "@storybook/addon-info": "^5.3.10",
    "@storybook/addon-knobs": "^5.3.10",
    "@storybook/addon-links": "^5.3.10",
    "@storybook/addons": "^5.3.10",
    "@storybook/react": "^5.3.10",
    "@types/color": "^3.0.1",
    "@types/styled-components": "^5.0.1",
    "babel-jest": "^25.1.0",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-inline-json-import": "^0.3.2",
    "babel-plugin-styled-components": "1.10.7",
    "color": "^3.1.2",
    "conventional-changelog-cli": "^2.0.31",
    "copy-text-to-clipboard": "^2.1.1",
    "cross-env": "^7.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-vue-libs": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.0.9",
    "memfs": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "plop": "^2.6.0",
    "prop-types": "^15.7.2",
    "react-notifications": "^1.4.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.2.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "0.26.0",
    "styled-components": "^5.0.1",
    "typescript": "^3.8.3"
  }
}
